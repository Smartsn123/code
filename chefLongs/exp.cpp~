#include<bits/stdc++.h>
using namespace std;
#define ll  long long int
#define in(a)  cin>>a
#define out(a) cout<<a
#define br printf("\n")
#define loop(i,k,n) for(int i=k;i<n;i++)
#define loopr(i,k,n) for(int i=k;i>=n;i--)
#define max(a,b) a>b?a:b 
#define min(a,b) a<b?a:b 
#define arrin(arrname,size) loop(i,0,size) cin>>arr[i]
#define fastinput ios_base::sync_with_stdio(false)
#define mod 1000000007
int main()
{
  
  int n=4;
  int m=10;

  cout<<n<<" "<<m<<endl;
  loop(i,1,n+1)
   cout<<i<<" ";
  cout<<endl;
  loop(i,0,m-1)
  { int k = rand() % 4 + 1; 
    int x= rand() % n + 1;  
    int y= rand() % (n-x+1) + x;
    int v=rand() % 1000000000 + 1;
    if(k==4)
    cout<<k<<" "<<x<<" "<<y<<endl;
    else
    cout<<k<<" "<<x<<" "<<y<<" "<<v<<endl;
    
  }
   cout<<"4 1 "<<m<<endl;
  return 0;

  
}
